package it.uniroma1.di.simulejos.opengl;

import javax.media.opengl.GL2GL3;

public class Program extends GLObject {
	final int id;

	public Program(GL2GL3 gl) {
		super(gl);
		this.id = gl.glCreateProgram();
	}

	public void use() {
		gl.glUseProgram(id);
	}

	public void attachShader(Shader shader) {
	}

	public void link() {
		gl.glLinkProgram(id);
	}

	public boolean isLinked() {
		final int[] result = new int[1];
		gl.glGetProgramiv(id, GL2GL3.GL_LINK_STATUS, result, 0);
		return result[0] != 0;
	}

	public void delete() {
		gl.glDeleteProgram(id);
	}

	public boolean isDeleted() {
		final int[] result = new int[1];
		gl.glGetProgramiv(id, GL2GL3.GL_DELETE_STATUS, result, 0);
		return result[0] != 0;
	}
}
